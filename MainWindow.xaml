<Window x:Class="talk2Server.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:talk2Server"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="btnStart" Content="Button" HorizontalAlignment="Left" Height="80" Margin="80,64,0,0" VerticalAlignment="Top" Width="160"/>
        <Button x:Name="btnStop" Content="Button" HorizontalAlignment="Left" Height="80" Margin="260,64,0,0" VerticalAlignment="Top" Width="160"/>
        <ListBox x:Name="lbxConn" HorizontalAlignment="Left" Height="240" Margin="80,164,0,0" VerticalAlignment="Top" Width="180"/>
        <ListBox x:Name="lbxClients" HorizontalAlignment="Left" Height="240" Margin="280,164,0,0" VerticalAlignment="Top" Width="180"/>
        <ListBox x:Name="lbxMsg" HorizontalAlignment="Left" Height="240" Margin="480,164,0,0" VerticalAlignment="Top" Width="280"/>
        <TextBox x:Name="IP" HorizontalAlignment="Left" Height="20" Margin="480,64,0,0" TextWrapping="Wrap" Text="127.0.0.1" VerticalAlignment="Top" Width="100"/>
        <TextBox x:Name="Port" HorizontalAlignment="Left" Height="20" Margin="600,64,0,0" TextWrapping="Wrap" Text="8080" VerticalAlignment="Top" Width="40"/>

    </Grid>
</Window>
